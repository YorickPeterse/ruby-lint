##
# Constant: <%= @constant_name %>
# Created:  <%= Time.new %>
# Platform: <%= RUBY_ENGINE %> <%= Rubinius::VERSION rescue RUBY_VERSION %>
#
RubyLint::VirtualMachine.global_scope.define_constant('<%= @constant_name %>') do |klass|
  <%- if @superclass -%>
  klass.inherits(RubyLint::VirtualMachine.global_constant('<%= @superclass %>'))
  <%- end -%>
  <%- @methods.each do |type, collection| -%>
  <%- collection.each do |name, args| -%>

  <%- if args.empty? -%>
  klass.define_<%= type %>('<%= name %>')
  <%- else -%>
  klass.define_<%= type %>('<%= name %>') do |method|
    <%- args.each do |arg| -%>
    method.define_<%= arg[:method] %>('<%= arg[:name] %>')
    <%- end -%>
  end
  <%- end -%>
  <%- end -%>
  <%- end -%>
end
